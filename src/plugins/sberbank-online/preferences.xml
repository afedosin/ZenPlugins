<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="login"
        title="Логин"
        dialogTitle="Логин"
        dialogMessage="Введите идентификатор пользователя или логин от Сбербанк Онлайн"
        summary="|ID пользователя или логин|{@s}"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        obligatory="true">
    </EditTextPreference>
    <EditTextPreference
        key="password"
        title="Пароль"
        dialogTitle="Пароль"
        dialogMessage="Введите пароль от Сбербанк Онлайн"
        inputType="textPassword"
        summary="||***********"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        obligatory="true">
    </EditTextPreference>
    <EditTextPreference
        key="pin"
        title="Пин-код (5 цифр)"
        dialogTitle="Пин-код (5 цифр)"
        dialogMessage="Введите ПИН-код (5 цифр) от мобильного приложения Сбербанк Онлайн"
        inputType="numberPassword"
        summary="||***********"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        obligatory="true">
    </EditTextPreference>
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2018-04-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}">
    </EditTextPreference>
</PreferenceScreen>
