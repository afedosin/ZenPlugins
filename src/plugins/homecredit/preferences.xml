<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
            key="birth"
            title="Дата рождения"
            dialogTitle="Дата рождения"
            dialogMessage="Формат: дд.мм.гггг"
            inputType="text"
            summary="|дд.мм.гггг|{@s}"
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            obligatory="true">
    </EditTextPreference>
    <EditTextPreference
            key="phone"
            title="Номер телефона"
            dialogTitle="Номер телефона"
            dialogMessage="Формат: 7хххххххххх"
			inputType="number"
            summary="|7xxxxxxxxxx|{@s}"
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            obligatory="true">
    </EditTextPreference>
    <EditTextPreference
            key="pin"
            title="Пин-код"
            dialogTitle="ПИН-код приложения 'Мой кредит'"
            dialogMessage="Формат: 4 цифры."
            inputType="numberPassword"
            summary="||****"
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            obligatory="true">
    </EditTextPreference>
    <EditTextPreference
            key="startDate"
            title="С какой даты загружать операции"
            dialogTitle="Дата начала загрузки"
            dialogMessage="Введите дату, с которой загружать операции"
            inputType="date"
            summary="|гггг-мм-дд|{@s}"
            defaultValue="2018-04-01T00:00:00.000Z"
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            obligatory="true">
    </EditTextPreference>
</PreferenceScreen>
